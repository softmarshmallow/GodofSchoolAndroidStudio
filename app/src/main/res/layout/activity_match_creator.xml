<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="260dp"
            android:background="#000000">


            <ImageView
                android:id="@+id/storePhotoImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.8"
                android:scaleType="centerCrop"
                android:src="@drawable/demo_image"
                android:tint="#bd2e2e2e"/>

            <android.support.v7.widget.Toolbar
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:background="#4dcdcdcd">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/leftarrowarrows"/>

                <TextView
                    android:id="@+id/saveTextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="20dp"
                    android:text="저장"
                    android:textColor="#fff"
                    android:textSize="14dp"/>
            </android.support.v7.widget.Toolbar>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/toolbar"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="15dp"
                            android:text="이름"
                            android:textColor="#fff"
                            android:textSize="16dp"
                            />

                        <EditText
                            android:id="@+id/storeNameEditText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.3"
                            android:background="#00000000"
                            android:hint="단판이다"
                            android:inputType="text"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:paddingTop="15dp"
                            android:textColor="#fff"
                            android:textColorHint="#fff"
                            android:textSize="20dp"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.001dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="#fff"/>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="20dp"
                            android:text="내용"
                            android:textColor="#fff"
                            android:textSize="18dp"/>

                        <EditText
                            android:id="@+id/storeShortDescriptionEditText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:background="#00000000"
                            android:hint="Jidhar apna CRUSH hai , udhar hich sala RUSH hai and filhaal timepass k liye only CANDYCRUSH he."
                            android:textColor="#fff"
                            android:textColorHint="#fff"
                            android:textSize="14dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="bottom"
                            android:text="매치 생성"
                            android:textColor="#fff"
                            android:textSize="20dp"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.001dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:background="#fff"/>

                </LinearLayout>


            </LinearLayout>


        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <View
                    android:id="@+id/view3"
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="#ACACAC"/>

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#f0f0f4"
                    android:paddingBottom="10dp"
                    android:paddingLeft="22dp"
                    android:paddingTop="10dp"
                    android:text="사진"
                    android:textColor="#868686"
                    android:textSize="16dp"/>

            </RelativeLayout>

            <View
                android:id="@+id/view15"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="#ACACAC"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="0.5"
                    android:padding="20dp"
                    android:text="사진"
                    android:textSize="14dp"/>


                <mehdi.sakout.fancybuttons.FancyButton
                    android:id="@+id/selectStorePhotoButton"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="10dp"
                    android:layout_weight="0.3"
                    app:fb_borderColor="@color/colorPrimaryDark"
                    app:fb_borderWidth="1dp"
                    app:fb_defaultColor="#0000"
                    app:fb_focusColor="@color/colorPrimaryDark"
                    app:fb_radius="10dp"
                    app:fb_text="사진 변경"
                    app:fb_textColor="@color/colorPrimaryDark"/>


            </LinearLayout>

            <View
                android:id="@+id/view16"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="#ACACAC"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="#ACACAC"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#f0f0f4"
                    android:paddingBottom="10dp"
                    android:paddingLeft="22dp"
                    android:paddingTop="10dp"
                    android:text="상세 설명"
                    android:textColor="#868686"
                    android:textSize="16dp"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="#ACACAC"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="0.4"
                    android:padding="20dp"
                    android:text="상세 설명"
                    android:textSize="14dp"/>

                <View
                    android:id="@+id/view22"
                    android:layout_width="match_parent"
                    android:layout_height="0.001dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0.4"
                    android:background="@android:color/black"/>

                <EditText
                    android:id="@+id/storeFullDescriptionEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="30dp"
                    android:layout_weight="1.60"
                    android:background="#00000000"
                    android:hint="Jidhar apna CRUSH hai , udhar hich sala RUSH hai and filhaal timepass k liye only CANDYCRUSH he."
                    android:minHeight="80dp"
                    android:textSize="14dp"/>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="#ACACAC"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="#ACACAC"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#f0f0f4"
                    android:paddingBottom="10dp"
                    android:paddingLeft="22dp"
                    android:paddingTop="10dp"
                    android:text="위치"
                    android:textColor="#868686"
                    android:textSize="16dp"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="#ACACAC"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="0.5"
                    android:padding="20dp"
                    android:text="위치"
                    android:textSize="14dp"/>


                <mehdi.sakout.fancybuttons.FancyButton
                    android:id="@+id/selectStoreLocationButton"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="10dp"
                    android:layout_weight="0.3"
                    app:fb_borderColor="@color/colorPrimaryDark"
                    app:fb_borderWidth="1dp"
                    app:fb_defaultColor="#0000"
                    app:fb_focusColor="@color/colorPrimaryDark"
                    app:fb_radius="10dp"
                    app:fb_text="경도.위도"
                    app:fb_textColor="@color/colorPrimaryDark"/>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="#ACACAC"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="0.5"
                    android:padding="20dp"
                    android:text="위치 설명"
                    android:textSize="14dp"/>

                <EditText
                    android:id="@+id/storeAddressEditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:inputType="textPostalAddress"
                    android:padding="16dp"/>


            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="#ACACAC"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#f0f0f4"
                    android:paddingBottom="10dp"
                    android:paddingLeft="22dp"
                    android:paddingTop="10dp"
                    android:text="태그"
                    android:textColor="#868686"
                    android:textSize="16dp"/>

            </RelativeLayout>

            <View
                android:id="@+id/view13"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="#ACACAC"/>

            <View
                android:id="@+id/view12"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="#ACACAC"/>


            <co.lujun.androidtagview.TagContainerLayout
                android:id="@+id/offerTagContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:padding="3dp"
                app:container_background_color="#00000000"
                app:container_border_color="#00000000"
                app:container_border_radius="0dp"
                app:container_gravity="left"
                app:horizontal_interval="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/offerTitleTextView"
                app:layout_constraintVertical_bias="0.0"
                app:tag_background_color="#00000000"
                app:tag_border_color="#7b7b7b"
                app:tag_border_width="1dp"
                app:tag_clickable="false"
                app:tag_corner_radius="15dp"
                app:tag_enable_cross="true"
                app:tag_horizontal_padding="15dp"
                app:tag_max_length="18"
                app:tag_text_color="#ff666666"
                app:tag_text_direction="ltr"
                app:tag_text_size="8sp"
                app:tag_theme="none"
                app:tag_vertical_padding="10dp"
                app:vertical_interval="10dp"/>


            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/addTagButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:layout_weight="0.3"
                app:fb_borderColor="@color/colorPrimaryDark"
                app:fb_borderWidth="1dp"
                app:fb_defaultColor="#0000"
                app:fb_focusColor="@color/colorPrimaryDark"
                app:fb_radius="10dp"
                app:fb_text="태그 추가"
                app:fb_textColor="@color/colorPrimaryDark"/>


            <View
                android:id="@+id/view11"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_alignParentBottom="true"
                android:background="#ACACAC"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="#ACACAC"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#f0f0f4"
                    android:paddingBottom="10dp"
                    android:paddingLeft="22dp"
                    android:paddingTop="10dp"
                    android:text="날짜"
                    android:textColor="#868686"
                    android:textSize="16dp"/>

            </RelativeLayout>

            <View
                android:id="@+id/view14"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="#ACACAC"/>


            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/chooseDateButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:layout_weight="0.3"
                app:fb_borderColor="@color/colorPrimaryDark"
                app:fb_borderWidth="1dp"
                app:fb_defaultColor="#0000"
                app:fb_focusColor="@color/colorPrimaryDark"
                app:fb_radius="10dp"
                app:fb_text="12월 25일"
                app:fb_textColor="@color/colorPrimaryDark"/>


            <View
                android:id="@+id/view19"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_alignParentBottom="true"
                android:background="#ACACAC"/>

            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/chooseTimeButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:layout_weight="0.3"
                app:fb_borderColor="@color/colorPrimaryDark"
                app:fb_borderWidth="1dp"
                app:fb_defaultColor="#0000"
                app:fb_focusColor="@color/colorPrimaryDark"
                app:fb_radius="10dp"
                app:fb_text="23시 50분"
                app:fb_textColor="@color/colorPrimaryDark"/>


            <View
                android:id="@+id/view18"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="#ACACAC"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="#ACACAC"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#f0f0f4"
                    android:paddingBottom="10dp"
                    android:paddingLeft="22dp"
                    android:paddingTop="10dp"
                    android:text="최대인원"
                    android:textColor="#868686"
                    android:textSize="16dp"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="#ACACAC"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="0.5"
                    android:padding="20dp"
                    android:text="최대인원"
                    android:textSize="14dp"/>

                <EditText
                    android:id="@+id/maxPlayerCountEditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:inputType="textPostalAddress"
                    android:padding="16dp"/>


            </LinearLayout>
        </LinearLayout>

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/saveButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            app:fb_defaultColor="@color/colorPrimaryDark"
            app:fb_radius="30dp"
            app:fb_text="저장"
            app:fb_textColor="#fff"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>


    </LinearLayout>


</ScrollView>
